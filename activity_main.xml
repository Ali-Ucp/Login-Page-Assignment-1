<?xml version="1.0" encoding="utf-8"?>
<!--Overall Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/layout_background"
    tools:context=".MainActivity">
<!-- Logo Layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="290dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:id="@+id/picturelayout"
    tools:ignore="MissingConstraints">
    <!-- Logo -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:id="@+id/logo2"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="30dp"

        ></ImageView>
    <!-- Welcome Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Welcome"
        android:textSize="28dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:letterSpacing="0.10"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="-90dp"
        android:id="@+id/welcometext"
        >
    </TextView>

</LinearLayout>
    <!-- Package class card View -->
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/action_menu_view"
    android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="30dp"
    android:background="@drawable/layout_background"
    app:cardElevation="25dp"
    app:cardCornerRadius="40dp">
    <!--Another Linear Layout for Card View-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="30dp"
        android:layout_marginTop="-50dp"
        >
        <!--UserName Text-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:id="@+id/Username"
            android:hint="Username"
            android:background="@drawable/card_shape"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/person_24dp_5f6368_fill0_wght400_grad0_opsz24"
            android:drawablePadding="5dp"
            >


        </EditText>
        <!--Password Text-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/password"
            android:hint="Password"
            android:background="@drawable/card_shape"
            android:paddingLeft="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/lock_24dp_5f6368_fill0_wght400_grad0_opsz24"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            >
        </EditText>
        <!--CheckBox-->
<CheckBox
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:text="Stay Logged In"
    android:textColor="@color/black"
    android:layout_margin="10dp"
    android:id="@+id/checkbox"
    ></CheckBox>
        <!--Login With Credential Button-->
        <Button
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:backgroundTint="#5BD0EB"
            android:text="LOGIN WITH CREDENTIAL"
            android:textColor="@color/white"
            android:id="@+id/login"
            ></Button>
        <!--Or Text-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="OR"
            android:textSize="18dp"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            ></TextView>
        <!--Login in With Badge Button-->
        <Button
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:backgroundTint="#5BD0EB"
            android:text="LOGIN WITH BADGE"
            android:textColor="@color/white"
            android:id="@+id/badges"
            ></Button>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<!--Signup Text-->
    <TextView
        android:id="@+id/signup_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Don't have an account? Sign up"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="16dp"
        tools:ignore="TextSizeCheck" >

    </TextView>
<!--Layout For CopyRight Claims-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:gravity="bottom"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Copyright Â© M.Ali-Irtza (0860)"
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck"></TextView>

    </LinearLayout>
</LinearLayout>